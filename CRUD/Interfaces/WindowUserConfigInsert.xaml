        <TextBox x:Name="TextBoxValue" HorizontalAlignment="Left" Height="27" Margin="553,124,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" FontSize="18" MaxLength="4"/>
        <Label Content="Utilizador :" HorizontalAlignment="Left" Margin="57,120,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="TextBoxDescri" HorizontalAlignment="Left" Height="36" Margin="167,197,0,0" Text="Descrição" TextWrapping="Wrap" VerticalAlignment="Top" Width="559" FontSize="18" MaxLength="50"/>
        <Label Content="Descrição :" HorizontalAlignment="Left" Margin="57,197,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Valor :" HorizontalAlignment="Left" Margin="470,120,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="ButtonCancel" Content="Cancelar" HorizontalAlignment="Left" Margin="579,279,0,0" VerticalAlignment="Top" Height="55" Width="147" Click="ButtonCancel_Click"/>
        <Button x:Name="ButtonAction" Content="Inserir" HorizontalAlignment="Left" Margin="400,279,0,0" VerticalAlignment="Top" Height="55" Width="147" Click="ButtonAction_Click"/>

    </Grid>
</Window>
