        xmlns:local="clr-namespace:Desktop___interfaces.Interfaces"
        mc:Ignorable="d"
        Title="WindowUserConfigInsert" Height="375" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="LabelTitle" Content="Inserir a configuração do Utilizador" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="50"/>
