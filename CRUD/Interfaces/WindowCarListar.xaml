<Window x:Class="Desktop___interfaces.Interfaces.WindowCarListar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop___interfaces.Interfaces"
        mc:Ignorable="d"
        Title="WindowCarListar" Height="536" Width="1019" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="TextBoxFromDescri" HorizontalAlignment="Left" Margin="40,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="483" Height="26" MaxLength="60"/>
        <TextBox x:Name="TextBoxUntilDescri" HorizontalAlignment="Left" Margin="40,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="483" Height="26" MaxLength="60" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="TextBoxFromRepReq" HorizontalAlignment="Left" Margin="528,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Height="26" MaxLength="25"/>
        <TextBox x:Name="TextBoxUntilRepReq" HorizontalAlignment="Left" Margin="528,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Height="26" MaxLength="25" RenderTransformOrigin="0.5,0.5"/>
        <Label Content="De" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top"/>
        <Label Content="Até" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxFromPrice" HorizontalAlignment="Left" Margin="682,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Height="26" MaxLength="60"/>
        <TextBox x:Name="TextBoxUntilPrice" HorizontalAlignment="Left" Margin="682,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Height="26" MaxLength="60" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="ButtonSearch" Content="Pesquisar" HorizontalAlignment="Left" Margin="940,87,0,0" VerticalAlignment="Top" Height="57" Width="60" Click="ButtonSearch_Click"/>

        <Label Content="Lista Car" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="50" Height="73"/>
        <ListView x:Name="ListView" Margin="0,148,0,0" HorizontalAlignment="Center" Width="980" Height="277" VerticalAlignment="Top"  GridViewColumnHeader.Click="ListViewHeader_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="0">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}" FontWeight="Bold" HorizontalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Descrição" Width="500">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Descri}" HorizontalAlignment="Left" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Rep. Req." Width="155">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ReputationRequired}" HorizontalAlignment="Left" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Price" Width="155">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Price}" FontWeight="Bold" HorizontalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Max Speed" Width="155">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding MaxSpeed}" FontWeight="Bold" HorizontalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ButtonCancel" Content="Cancelar" Margin="882,446,0,0" Click="ButtonCancel_Click" HorizontalAlignment="Left" Width="106" Height="42" VerticalAlignment="Top"/>
        <Button x:Name="ButtonEdit" Content="Editar" HorizontalAlignment="Left" Margin="736,446,0,0" Width="108" RenderTransformOrigin="0.069,0.81" Height="42" VerticalAlignment="Top" Click="ButtonEdit_Click"/>
        <Button x:Name="ButtonDel" Content="Eliminar" Margin="586,446,0,0" Height="42" VerticalAlignment="Top" HorizontalAlignment="Left" Width="106" Click="ButtonDel_Click"/>
        <TextBox x:Name="TextBoxFromMaxSpeed" HorizontalAlignment="Left" Margin="836,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" Height="26" MaxLength="60"/>
        <TextBox x:Name="TextBoxUntilMaxSpeed" HorizontalAlignment="Left" Margin="836,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" Height="26" MaxLength="60" RenderTransformOrigin="0.5,0.5"/>

    </Grid>
</Window>
